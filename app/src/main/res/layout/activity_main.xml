<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.bchapai.wheelon.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:text="Accelerometer"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/xA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text=""
        android:textSize="15dp" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/yA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/xA"
        android:layout_alignRight="@+id/xA"
        android:layout_below="@+id/xA"
        android:layout_marginTop="18dp"
        android:text="" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/zA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yA"
        android:layout_alignStart="@+id/yA"
        android:layout_below="@+id/yA"
        android:layout_marginTop="26dp"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xG"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Gyroscope"
        android:textSize="20dp" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/xG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zA"
        android:layout_alignStart="@+id/zA"
        android:layout_centerVertical="true"
        android:text="" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/yG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/xG"
        android:layout_alignRight="@+id/xG"
        android:layout_below="@+id/xG"
        android:layout_marginTop="24dp"
        android:text="" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/zG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yG"
        android:layout_alignStart="@+id/yG"
        android:layout_below="@+id/yG"
        android:layout_marginTop="28dp"
        android:text="" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="Start" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startBtn"
        android:layout_alignBottom="@+id/startBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Stop" />


</RelativeLayout>
