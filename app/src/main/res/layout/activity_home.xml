<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="#4f93dc"
        android:textSize="30sp"
        android:text="Sensor Recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="#ecf"
        android:text="Acceleromter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xA"
        android:textAlignment="center"
        android:text="X: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yA"
        android:textAlignment="center"
        android:text="Y: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/zA"
        android:textAlignment="center"
        android:text="Z: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Gyroscope"
        android:background="#ecff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xG"
        android:textAlignment="center"
        android:text="X: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yG"
        android:textAlignment="center"
        android:text="Y: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/zG"
        android:textAlignment="center"
        android:text="Z: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:text=""
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Chronometer
        android:textColor="#601212"
        android:layout_marginLeft="170dp"
        android:textSize="50sp"
        android:id="@+id/chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/startbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/start" />

        <Button
            android:visibility="invisible"
            android:layout_marginLeft="60dp"
            android:id="@+id/analyzebtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/analyze" />

        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/endbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/stop" />



    </LinearLayout>




</LinearLayout>
